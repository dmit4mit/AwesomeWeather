<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dmitron.bottlerocketweather.main.MainViewModel" />

        <variable
            name="topBarClickListener"
            type="com.dmitron.bottlerocketweather.main.TopBarClickListener" />

        <variable
            name="topBarVisibility"
            type="Boolean" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_gradient">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_graph"
            tools:context=".main.MainActivity">

        </androidx.fragment.app.FragmentContainerView>

        <include
            android:id="@+id/includeTopBar"
            app:clickHandler = "@{topBarClickListener}"
            android:visibility="@{topBarVisibility}"
            layout="@layout/top_bar" />

    </FrameLayout>

</layout>